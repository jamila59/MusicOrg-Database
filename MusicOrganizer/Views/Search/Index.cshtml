@{
    Layout = "_Layout";
}
@using MusicOrganizer.Models;
@if (@Model.Count == 0)
{
    <h3>No artist have been found!</h3>
}
else
{
    <h1>Here is your search result:</h1>
    <ul>
        @foreach (Artist artist in Model)
        {
            <li><a href="/artists/@artist.Id">@artist.Name</a></li>
        }
    </ul>
}

<p><a href="/search_by_artist/new">Search another artist</a></p>
<p><a href="/"> Go home</a></p>
