@{
    Layout = "_Layout";
}

@using MusicOrganizer.Models;

<h1>Records</h1>
@if (Model.Count == 0)
{
  <p>There are no records in the list.</p>
}
<ul>
  @foreach (Record record in Model)
  {
    <li><a href='/records/@record.Id'>@record.Title</a></li>
  }
</ul>

<p><a href="/records/new">Add a new record</a></p>
<p><a href="/"> Go home</a></p>

<form action="/records/delete" method="post">
  <button class="btn btn-info" type="submit" name="button">Clear All Records</button>
</form>
